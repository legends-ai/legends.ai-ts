{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "~src/*": ["./src/*"],
      "~components/*": ["./src/components/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ]
}
